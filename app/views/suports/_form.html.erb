<%= form_with(model: suport, local: true) do |form| %>
  <% if suport.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(suport.errors.count, "error") %> prohibited this suport from being saved:</h2>

      <ul>
      <% suport.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :contact_name, placeholder: "例)例題　太郎", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email, placeholder: "例)sample@gmail.com", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject, id: :contact_subject, placeholder: "例)サブスクページの作り方", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message, placeholder: "例)やり方がわからないので教えて欲しい", class: 'form-control', id: :contact_message %>
  </div>
  <div class="actions">
    <%= form.submit "送信する" %>
  </div>
<% end %>
