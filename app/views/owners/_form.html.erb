<%= form_with(model: @owner, local: true) do |f| %>

 <%= render 'shared/error_messages', object: @owner %>  

  <%= f.label :name, class: "label-#{yield(:class_text)}" %> <span class="must">必須</span><br/>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :kana, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :kana, class: "form-control" %>

  <%= f.label :email, class: "label-#{yield(:class_text)}" %> <span class="must">必須</span><br/>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :phone_number, class: "label-#{yield(:class_text)}" %> <span>(ハイフンなし)連絡がつきやすい番号でお願いします。</span><span class="must">必須</span><br/>
  <%= f.telephone_field :phone_number, class: "form-control" %>

  <%= f.label :store_information %> <span class="must">必須</span><br/>
  <%= f.text_field :store_information, class: 'form-control' %>

  <%= f.label :payee %> <span class="must">必須</span><br/>
  <%= f.text_field :payee, class: 'form-control' %>

  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, :required => true, class: "form-control" %>

  <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password_confirmation, :required => true, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>