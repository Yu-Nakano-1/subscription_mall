<% provide(:title, "よくある質問") %>
<p id="notice"><%= notice %></p>

<div class="h2 mx-auto" style="width: 250px; color: #faab05;">Q&A</div>

<hr size="2">

<% @questions.each do |question| %>
  <% if current_admin.present? %>
    <div>       	  
      <!--%= link_to "#{question.detail}", question %-->
    </div>
    <div>
      <!--%= link_to "#{question.answer}", question %-->
    </div>
    <div>
      <!--%= link_to '編集', edit_question_path(question) %-->
    </div>
    <div>
      <!--%= link_to '削除', question, method: :delete, data: { confirm: 'Are you sure?' } %-->
    </div>
  <% elsif !current_admin.present? %>
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading">
          <!--h2 class="panel-title"-->
	     <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= question.id %>">
	       <div>
		 <span class = "h4 text-danger">Q. </span><span class = "h6 text-dark border-bottom border-dark"><%= question.detail %></span>
	       </div>
             </a>
          <!--/h2-->
        </div>
	<div id="collapse<%= question.id %>" class="panel-collapse collapse in">
	  <div class="panel-body">
	    <!--h2-->
              <span class = "h4 text-primary mx-3">A. </span><span class = "h6 text-dark"><%= question.answer %></span>
	    <!--/h2-->
	  </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
 <br>
 <% if current_admin.present? %>
   <div>
     <%= link_to 'よくある質問新規作成', new_question_path, class: "btn btn-info" %>
   </div>
 <% end %>

