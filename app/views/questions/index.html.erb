<% provide(:title, "よくある質問") %>
<p id="notice"><%= notice %></p>

<h1>よくある質問</h1>

  <div class="col-sm-10 col-sm-offset-1">
    <table class="table table-condensed table-hover" id="table-users">
      <thead>
        <tr>
          <th>内容</th>
          <th>回答</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
          <% if current_admin.present? %>
            <td><%= link_to "#{question.detail}", question %></td>
            <td><%= link_to "#{question.answer}", question %></td>
            <td><%= link_to '編集', edit_question_path(question) %></td>
            <td><%= link_to '削除', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% elsif !current_admin.present? %>
            <td><%= question.detail %></td>
            <td><%= question.answer %></td>
          <% end %>
          </tr>
        <% end %>
      </tbody>
      <br>
      <% if current_admin.present? %>
        <%= link_to 'よくある質問新規作成', new_question_path, class: "btn btn-info" %>
      <% end %>
    </table>
  </div>

