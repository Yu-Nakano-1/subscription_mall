<% provide(:title, "サブスクnews一覧") %>
<p id="notice"><%= notice %></p>

<h1 class="brand-color display-4 mt-6 mb-6">サブスクnews一覧</h1>

<table>
  <tbody>
    <% if current_admin.present? %>
      <%= link_to '新規作成', new_blog_path, class: "btn btn-info" %>
    <% end %>
    <% @blogs.each do |blog| %>
    <hr class="tool-bar">
      <div class="row">
        <div class="col-sm-2">
          <%= blog.title.truncate(20) %>
        </div><br>
        <div class="col-sm-4">
        <% if blog.image_photo.present? %>
          <div class="grid-item-image"><%= image_tag blog.image_photo.url,:size => '300x260' %></div>
        <% else %>
        
        <% end %>
        </div>

        <div class="col-sm-2">
          <%= blog.body.truncate(20) %>
        </div>
        <div class="col-sm-2">
          <%= link_to "詳細", blog_path(blog), class: "btn-gradient-3d-simple" %>
        </div>
      <% if current_admin.present? %>
        <div class="col-sm-2">
          <%= link_to "編集", edit_blog_path(blog), class: "btn-gradient-3d-simple" %>
        </div>
        <div class="col-sm-2">
          <%= link_to "削除", blog_path(blog), method: :delete, class: "btn-gradient-3d-simple-destroy", data: { confirm: "サブスクnewsを削除してよろしいですか？" } %>
        </div>
      <% end %>
      </div>
    <% end %>
  </tbody>
</table>
