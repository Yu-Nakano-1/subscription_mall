<% provide(:title, "サブスクページ") %>
<p id="notice"><%= notice %></p>

<h1>サブスクページ</h1>

<div class="row" >
  <div class="col-sm-6 col-sm-offset-1">
    <p>ここに写真</p>
    <p>< %= image_tag @subscription.images.image_subscription_id.thumb.url %></p>
  </div>
  <div class="col-sm-4">
    <div class="box">
      <div class="box-inner">
        <h5><%= @subscription.name %></h5>
        <p>
          <strong><%= @subscription.title %></strong>
        </p>
        <hr class="tool-bar">

        <h5><%= @subscription.detail %></h5>
        <h5><%= @subscription.subscription_detail %></h5>
        <hr class="tool-bar">
        
        <p>
          <strong><%= @subscription.price %>円/月（税込）</strong>
        </p>
        <p>
          <strong>お支払い方法</strong>
        </p>
        <p>
          <strong>・クレジットカード払い（VISA,Master）</strong>
        </p>
        <hr class="tool-bar">
        <p class="red">
          <strong><%= @subscription.created_at %></strong>
        </p>
        <p>
          <strong><%= @subscription.updated_at %></strong>
        </p>
        <p>
          <strong><%= @subscription.owner_id %></strong>
        </p>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_owner_shop_subscription_path(@subscription, owner_id: @owner.id, shop_id: @shop.id) %> |
<%= link_to 'Back', owner_shop_subscriptions_path %>
