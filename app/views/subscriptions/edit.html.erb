<% provide(:title, "サブスクページ編集") %>

<h1 class="brand-color display-4 mt-6 mb-6">サブスクページ編集</h1>

<%= form_with(model: @subscription, url: owner_subscription_path, multipart: true, local: true) do |form| %>
  <%= render 'shared/error_messages' , object: @subscription %>

  <%= form.hidden_field :owner_id, :value => @owner.id %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :subscription_name, placeholder: "例)", class: 'form-control form_border' %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :subscription_title, placeholder: "例)", class: 'form-control form_border' %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, placeholder: "例)", class: 'form-control form_border' %>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail, id: :subscription_detail, placeholder: "例)", class: 'form-control form_border' %>
  </div>
  
  <div class="field">
    <%= form.label :qr_image , for: "file-input", type:"file"%><br/>
    <%= form.file_field :qr_image, id: "file-input"%>
  </div>

  <div class="field">
    <%= form.label :image_subscription, for: "file-input", type:"file"%> <span class="must">必須</span><br/>
    <%= form.file_field :image_subscription, id: "file-input" %>
  </div>
  <div class="field">
    <%= form.label :お店紹介写真1, for: "file-input", type:"file" %><br/>
    <%= form.file_field :image_subscription2, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :お店紹介写真2, for: "file-input", type:"file" %><br/>
    <%= form.file_field :image_subscription3, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :お店紹介写真3, for: "file-input", type:"file" %><br/>
    <%= form.file_field :image_subscription4, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :お店紹介写真4, for: "file-input", type:"file" %><br/>
    <%= form.file_field :image_subscription5, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :subscription_detail %>
    <%= form.text_area :subscription_detail, id: :subscription_subscription_detail, placeholder: "例)", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真2, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image2, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真3, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image3, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真4, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image4, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真5, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image5, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真6, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image6, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真7, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image7, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真8, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image8, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真9, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image9, id: "file-input"%>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真10, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image10, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真11, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image11, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真12, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image12, id: "file-input"%>
  </div>

  <div class="field">
    <%= form.label :category_name %>
    <%= form.select :category_name, Subscription.category_names.keys, :include_blank => "カテゴリを選択してください", id: :subscription_subscription_detail, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :category_genre %><br/>
    <%= form.select :category_genre, Subscription.category_genres.keys, :include_blank => "ジャンルを選択してください", id: :subscription_subscription_detail, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :加入プラン %> <span class="must">必須</span><br/>
    <%= form.select :price, Subscription.prices.keys, { include_blank: "加入するプランを選択してください"}, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<div class="mt-5 mb-8">
  <%= link_to '詳細', owner_subscription_path(@subscription, owner_id: @owner.id, shop_id: @subscription.shop_id), class: "btn btn-brand" %>
  <%= link_to '一覧へ', owner_subscriptions_path, class: "btn btn-brand" %>
</div>
