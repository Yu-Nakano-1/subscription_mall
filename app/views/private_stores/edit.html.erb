    <%= form.file_field :sub_image8, id: :private_store_image_private_store %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真9 %><br/>
    <%= form.file_field :sub_image9, id: :private_store_image_private_store %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真10 %><br/>
    <%= form.file_field :sub_image10, id: :private_store_image_private_store %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真11 %><br/>
    <%= form.file_field :sub_image11, id: :private_store_image_private_store %>
