  </div>

  <div class="field">
    <%= form.label :category_name %>
    <%= form.select :category_name, Subscription.category_names.keys, :include_blank => "カテゴリを選択してください", id: :private_store_private_store_detail, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :category_genre %><br/>
    <%= form.select :category_genre, Subscription.category_genres.keys, :include_blank => "ジャンルを選択してください", id: :private_store_private_store_detail, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :加入プラン %> <span class="must">必須</span><br/>
    <%= form.select :price, Subscription.prices.keys, { include_blank: "加入するプランを選択してください"}, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<div class="mt-5 mb-8">
  <%= link_to '詳細', owner_private_store_path(@private_store, owner_id: @owner.id, shop_id: @private_store.shop_id), class: "btn btn-brand" %>
  <%= link_to '一覧へ', owner_private_stores_path, class: "btn btn-brand" %>
</div>
