<% provide(:title, "会員ユーザーログイン") %>

<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1>会員ユーザー ログイン</h1>
      <div class="box-email">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <div class="legal-text">
          ショップオーナーはこちらからログイン
          <div class="box-newusr"></br>
            <%= link_to "ショップオーナーはこちらからログイン", new_owner_session_path %>
          </div>
        </div>

        <h2>SNSアカウントでログイン</h2>

        <div class="box-facebook"></br>
            <%= link_to user_facebook_omniauth_authorize_path do %>
            <i class="fa fa-facebook-official"></i> Facebookでログイン
            <% end %>
        </div>

        <div class="box-line"></br>
            <%= link_to user_line_omniauth_authorize_path do %>
            <i class="fa fa-mobile"></i> LINEでログイン
            <% end %>
        </div>

        <div class="box-google"></br>
            <%= link_to "#" do %>
            <i class="fa fa-google"></i> Googleでログイン
            <% end %>
        </div>

        <div class="box-twitter"></br>
            <%= link_to user_twitter_omniauth_authorize_path do %>
            <i class="fa fa-twitter"></i> Twitterでログイン
            <% end %>
        </div>

      </div>
    <% end %>

    <div class="box-newusr">
    <p><span>------------</span> Subscription_mallの会員ですか？ <span>------------</span></p>

      <%= link_to "Subscription_mall会員登録", new_user_registration_path %>
    </div>
  </div>
</div>

