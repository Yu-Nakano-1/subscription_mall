<% provide(:title, "Edit") %>
<% provide(:class_text, 'owner--edit') %>
<% provide(:button_text, '更新') %>
<h1><%= @user.name %>様情報の編集</h1>


<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_with(model: @user, url: user_edit_update_user_path(@user), local: true) do |f| %>

    <%= render 'shared/error_messages', object: @user %> 

      <%= f.label :name, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :name, :required => true, class: "form-control form_border" %>

      <%= f.label :kana, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :kana, class: "form-control form_border" %>

      <%= f.label :email, class: "label-#{yield(:class_text)}" %>
      <%= f.email_field :email, :required => true, class: "form-control form_border" %>

      <%= f.label :phone_number, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :phone_number, class: "form-control form_border" %>

      <%= f.label :address, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :address, class: "form-control form_border" %>

      <%= f.label :password, class: "label-#{yield(:class_text)}" %>
      <%= f.password_field :password, :required => true, class: "form-control form_border" %>

      <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
      <%= f.password_field :password_confirmation, :required => true, class: "form-control form_border" %>

      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
  </div>
</div>
